---
interface Props {
	title?: string;
	description?: string;
	lang?: 'es' | 'en';
}

const {
	title = 'GTVMOTOR | Coming soon',
	description = 'Holding page oficial de GTVMOTOR para Espa√±a y Reino Unido.',
	lang = 'es',
} = Astro.props as Props;
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="description" content={description} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen bg-gtvgray text-slate-100 antialiased">
		<main class="mx-auto flex min-h-screen w-full max-w-6xl flex-col justify-center px-4 py-8 text-left sm:px-6 md:px-10 md:py-16">
			<slot />
		</main>
	</body>
</html>
