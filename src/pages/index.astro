---
import BaseLayout from '../layouts/BaseLayout.astro';
import Logo from '../components/Logo.astro';
import '../styles/global.css';
import arrowIcon from '../assets/flecha.jpeg';

const SITE_TITLE = 'GTVMOTOR | Próximamente nueva plataforma';
const SITE_DESCRIPTION =
	'Plataforma de movilidad y gestión de vehículos: compra, venta, alquiler y servicios para empresas y particulares en España, Europa y Reino Unido. Muy pronto, nueva experiencia digital.';

const CONTACT_EMAIL = 'hola@gtvmotor.es';
const CONTACT_PHONE = '+44 7394 329184';
const WHATSAPP_LINK =
	'https://wa.me/447394329184?text=Hola,%20me%20gustar%C3%ADa%20recibir%20m%C3%A1s%20informaci%C3%B3n%20sobre%20los%20servicios%20de%20GTVMOTOR.%20%C2%BFPodemos%20hablar%3F';

const CONTACT_EMAIL_UK = 'hello@gtvmotor.es';
const CONTACT_PHONE_UK = '+44 7394 329184';
const WHATSAPP_MESSAGE_UK = encodeURIComponent(
	'Hola GTVMOTOR, me gustaría más información sobre el UK Partners hub. Hi GTVMOTOR, I would like more details about the UK partners hub.'
);
const WHATSAPP_LINK_UK = `https://wa.me/447394329184?text=Hello,%20I%20would%20like%20to%20receive%20more%20information%20about%20GTVMOTOR%E2%80%99s%20services.%20May%20we%20talk%3F`;

const currentYear = new Date().getFullYear();
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION} lang="es">
	<div class="relative w-full space-y-12 text-left md:space-y-16">
		<div class="pointer-events-none absolute inset-x-0 -top-32 -z-10 mx-auto h-[32rem] max-w-4xl">
			<div class="h-full w-full rounded-full bg-emerald-500/20 blur-3xl"></div>
		</div>

		<section class="rounded-[32px] border border-white/10 bg-gradient-to-br from-white/10 via-white/5 to-transparent p-8 shadow-2xl backdrop-blur md:p-12">
			<div class="grid gap-10 lg:grid-cols-[3fr,2fr]">
				<div class="flex flex-col gap-6 text-white">
					<div class="flex flex-wrap items-center gap-3 text-xs uppercase tracking-[0.35em] text-white/60">
						<span class="inline-flex items-center gap-2 rounded-full border border-white/20 px-4 py-1 text-[0.65rem] font-semibold tracking-[0.25em] text-emerald-300">
							Estamos renovando nuestra plataforma
						</span>
						<span class="text-[0.65rem]">Multi-market mobility partner</span>
					</div>
					<div class="space-y-4">
						<div class="flex flex-wrap items-center gap-4">
							<Logo size="lg" useAsset assetPath="/logo.png" />
							<p class="text-sm uppercase tracking-[0.4em] text-white/70">NUEVA WEB EN CAMINO</p>
						</div>
						<h1 class="text-balance text-3xl font-semibold leading-tight md:text-5xl">
							Compra, alquiler y gestión de vehículos sin fricción.
						</h1>
						<p class="text-base text-white/80 md:text-lg">
							Estamos construyendo una plataforma pensada para clientes exigentes y partners de confianza en España, Europa y Reino Unido. Hasta entonces, nuestro equipo te acompaña de forma directa y personalizada.
						</p>
						<ul class="space-y-1 text-sm text-white/70">
							<li> Gestión integral de compra y venta de vehículos.</li>
							<li> Alquiler flexible para empresas y particulares.</li>
							<li> Acompañamiento bilingüe para clientes internacionales y partners.</li>
						</ul>
					</div>
					<div class="flex flex-wrap gap-3 text-sm">
						<a
							href={`mailto:${CONTACT_EMAIL}`}
							class="group inline-flex items-center justify-between gap-4 rounded-2xl border border-white/20 bg-white/5 px-6 py-4 font-semibold text-white transition hover:border-white/40 hover:bg-white/15"
						>
							<span class="flex flex-col text-left">
								<span class="text-xs uppercase tracking-[0.35em] text-white/80">Agendar una llamada</span>
								<span class="text-[0.72rem] font-normal text-white/60">Respondemos en menos de 24h laborables</span>
							</span>
							<span class="inline-flex h-10 w-10 items-center justify-center rounded-full bg-white text-gtvgray shadow-lg shadow-white/20 transition group-hover:translate-x-1">
								<img
									src={arrowIcon.src}
									width={arrowIcon.width}
									height={arrowIcon.height}
									alt="Flecha contacto"
									class="h-4 w-4 object-contain"
									loading="lazy"
								/>
							</span>
						</a>
						<a
							href={WHATSAPP_LINK}
							class="group inline-flex items-center justify-center gap-2 rounded-2xl bg-gradient-to-r from-emerald-400 via-emerald-500 to-emerald-600 px-6 py-3 font-semibold text-white shadow-lg shadow-emerald-500/30 transition hover:translate-y-0.5"
							target="_blank"
							rel="noreferrer"
							aria-label="WhatsApp directo España"
						>
							<svg viewBox="0 0 32 32" class="h-5 w-5" fill="currentColor" aria-hidden="true">
								<path d="M16 1.7c-7.8 0-14.2 6.3-14.2 14.1 0 2.5.7 4.9 1.9 7L2 30.6l8.1-2.1c2 1.1 4.3 1.7 6.7 1.7 7.8 0 14.2-6.4 14.2-14.2 0-3.8-1.5-7.3-4.1-10A13.92 13.92 0 0 0 16 1.7zm7.9 20c-.3.9-2 1.9-2.8 2-.7.1-1.6.1-2.6-.2-.6-.2-1.3-.4-2.3-.9-4.1-1.8-6.8-5.9-7-6.2-.2-.3-1.7-2.2-1.7-4.2 0-2 .6-3.1.9-3.5.4-.4.8-.5 1.1-.5H11c.3 0 .6 0 .8.7.3.8 1.2 2.8 1.3 3 .1.2.2.4 0 .7l-.4.7c-.2.2-.4.5-.6.7-.2.2-.4.4-.2.8s1.1 1.9 2.3 2.9c1.6 1.4 2.9 1.9 3.3 2.1.4.2.6.2.9-.1.3-.3 1-1.2 1.3-1.6.3-.4.5-.3.9-.2.4.1 2.3 1.1 2.7 1.3.4.2.7.3.8.4.1.2.1 1-.3 1.9z" />
							</svg>
							WhatsApp directo
						</a>
					</div>
				</div>
				<div class="relative rounded-3xl border border-white/10 bg-gradient-to-br from-white/[0.08] via-white/[0.04] to-white/[0.02] p-8 text-white shadow-xl shadow-black/40 backdrop-blur-sm transition-all hover:border-white/20 hover:shadow-2xl hover:shadow-black/50">
					<div class="absolute inset-0 rounded-3xl bg-gradient-to-br from-emerald-500/5 via-transparent to-transparent opacity-0 transition-opacity duration-500 hover:opacity-100"></div>
					<div class="relative space-y-6">
						<div class="space-y-3">
							<p class="text-xs font-semibold uppercase tracking-[0.35em] text-gtvorange">Agenda inmediata</p>
							<h2 class="text-2xl font-semibold leading-tight">Tu equipo dedicado</h2>
							<p class="text-sm leading-relaxed text-white/75">
								Trabajamos con un modelo consultivo: analizamos tu caso, te proponemos opciones claras y coordinamos cada paso contigo, sin fricción ni letra pequeña.
							</p>
						</div>
						<div class="space-y-3 border-t border-white/10 pt-6">
							<div class="group flex items-start justify-between gap-4 rounded-xl border border-white/5 bg-white/[0.02] p-4 transition-all hover:border-white/15 hover:bg-white/[0.05]">
								<div class="flex-1 space-y-1">
									<dt class="text-xs font-medium uppercase tracking-[0.2em] text-white/60">Correo</dt>
									<dd class="break-all font-semibold text-white">{CONTACT_EMAIL}</dd>
								</div>
								<a 
									href={`mailto:${CONTACT_EMAIL}`} 
									class="inline-flex items-center gap-1.5 rounded-lg border border-emerald-400/30 bg-emerald-400/10 px-4 py-2 text-xs font-semibold uppercase tracking-[0.25em] text-emerald-300 transition-all hover:border-emerald-400/50 hover:bg-emerald-400/20 hover:text-emerald-200 hover:shadow-lg hover:shadow-emerald-400/20"
								>
									Escribir
									<svg class="h-3.5 w-3.5 transition-transform group-hover:translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
									</svg>
								</a>
							</div>
							<div class="group flex items-start justify-between gap-4 rounded-xl border border-white/5 bg-white/[0.02] p-4 transition-all hover:border-white/15 hover:bg-white/[0.05]">
								<div class="flex-1 space-y-1">
									<dt class="text-xs font-medium uppercase tracking-[0.2em] text-white/60">WhatsApp</dt>
									<dd class="font-semibold text-white">{CONTACT_PHONE}</dd>
								</div>
								<a
									href={WHATSAPP_LINK}
									class="inline-flex items-center gap-1.5 rounded-lg border border-emerald-400/30 bg-emerald-400/10 px-4 py-2 text-xs font-semibold uppercase tracking-[0.25em] text-emerald-300 transition-all hover:border-emerald-400/50 hover:bg-emerald-400/20 hover:text-emerald-200 hover:shadow-lg hover:shadow-emerald-400/20"
									target="_blank"
									rel="noreferrer"
								>
									Abrir chat
									<svg class="h-3.5 w-3.5 transition-transform group-hover:translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
									</svg>
								</a>
							</div>
						</div>
						<div class="space-y-3 border-t border-white/10 pt-6">
							<div class="flex items-start gap-3 rounded-lg p-2.5 transition-colors hover:bg-white/[0.03]">
								<span class="mt-0.5 h-2 w-2 shrink-0 rounded-full bg-emerald-400 shadow-sm shadow-emerald-400/50"></span>
								<span class="text-sm leading-relaxed text-white/75">Atención especializada en el sector de automoción.</span>
							</div>
							<div class="flex items-start gap-3 rounded-lg p-2.5 transition-colors hover:bg-white/[0.03]">
								<span class="mt-0.5 h-2 w-2 shrink-0 rounded-full bg-emerald-400 shadow-sm shadow-emerald-400/50"></span>
								<span class="text-sm leading-relaxed text-white/75">Seguimiento personalizado de cada operación.</span>
							</div>
							<div class="flex items-start gap-3 rounded-lg p-2.5 transition-colors hover:bg-white/[0.03]">
								<span class="mt-0.5 h-2 w-2 shrink-0 rounded-full bg-emerald-400 shadow-sm shadow-emerald-400/50"></span>
								<span class="text-sm leading-relaxed text-white/75">Compromiso total con el cliente y los plazos acordados.</span>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<section class="space-y-6">
			<div class="flex flex-col gap-2 text-white">
				<p class="text-xs font-semibold uppercase tracking-[0.3em] text-gtvorange">Operamos donde nos necesitas</p>
				<h2 class="text-3xl font-semibold">Centros de atención directa</h2>
				<p class="text-sm text-white/70">
					Coordinamos equipos especializados para España, Europa y Reino Unido, conectando operaciones locales con una visión internacional.
				</p>
			</div>
			<div class="grid gap-6 md:grid-cols-2">
				<article class="rounded-3xl border border-white/10 bg-gradient-to-br from-white/10 via-white/5 to-white/0 p-6 shadow-xl backdrop-blur">
					<p class="text-xs font-semibold uppercase tracking-[0.3em] text-gtvorange">
						España · Europa
					</p>
					<h2 class="mt-3 text-2xl font-semibold text-white">Centro integral</h2>
					<p class="mt-2 text-sm text-white/70">
						Gestión de compra y venta de vehículos, alquiler bajo demanda y soluciones para flotas corporativas y pymes que necesitan movilidad sin complicaciones.
					</p>
					<ul class="mt-6 space-y-2 text-sm text-white/80">
						<li>
							<strong class="font-semibold text-white">Correo:</strong> {CONTACT_EMAIL}
						</li>
						<li>
							<strong class="font-semibold text-white">Teléfono:</strong> {CONTACT_PHONE}
						</li>
					</ul>
					<div class="mt-6 flex flex-wrap gap-3">
						<a
							href={`mailto:${CONTACT_EMAIL}`}
							class="rounded-2xl border border-white/20 px-5 py-2 text-sm font-medium text-white transition hover:border-gtvorange hover:text-gtvorange"
						>
							Escríbenos
						</a>
						<a
							href={WHATSAPP_LINK}
							class="group flex h-12 w-12 items-center justify-center rounded-2xl bg-gradient-to-br from-emerald-400 via-emerald-500 to-emerald-600 text-white shadow-lg shadow-emerald-500/30 transition hover:-translate-y-0.5"
							target="_blank"
							rel="noreferrer"
							aria-label="WhatsApp directo España"
						>
							<svg viewBox="0 0 32 32" class="h-5 w-5" fill="currentColor" aria-hidden="true">
								<path
									d="M16 1.7c-7.8 0-14.2 6.3-14.2 14.1 0 2.5.7 4.9 1.9 7L2 30.6l8.1-2.1c2 1.1 4.3 1.7 6.7 1.7 7.8 0 14.2-6.4 14.2-14.2 0-3.8-1.5-7.3-4.1-10A13.92 13.92 0 0 0 16 1.7zm7.9 20c-.3.9-2 1.9-2.8 2-.7.1-1.6.1-2.6-.2-.6-.2-1.3-.4-2.3-.9-4.1-1.8-6.8-5.9-7-6.2-.2-.3-1.7-2.2-1.7-4.2 0-2 .6-3.1.9-3.5.4-.4.8-.5 1.1-.5H11c.3 0 .6 0 .8.7.3.8 1.2 2.8 1.3 3 .1.2.2.4 0 .7l-.4.7c-.2.2-.4.5-.6.7-.2.2-.4.4-.2.8s1.1 1.9 2.3 2.9c1.6 1.4 2.9 1.9 3.3 2.1.4.2.6.2.9-.1.3-.3 1-1.2 1.3-1.6.3-.4.5-.3.9-.2.4.1 2.3 1.1 2.7 1.3.4.2.7.3.8.4.1.2.1 1-.3 1.9z"
								/>
							</svg>
							<span class="sr-only">WhatsApp España</span>
						</a>
					</div>
				</article>

				<article class="rounded-3xl border border-white/10 bg-gradient-to-br from-white/10 via-white/5 to-white/0 p-6 shadow-xl backdrop-blur">
					<p class="text-xs font-semibold uppercase tracking-[0.3em] text-gtvorange">
						United Kingdom
					</p>
					<h2 class="mt-3 text-2xl font-semibold text-white">UK Partners Hub</h2>
					<p class="mt-2 text-sm text-white/70">
						If you are a partner, fleet operator or investor in the UK, we connect you with our local business development team to explore opportunities and tailored projects.
					</p>
					<ul class="mt-6 space-y-2 text-sm text-white/80">
						<li>
							<strong class="font-semibold text-white">Email:</strong> {CONTACT_EMAIL_UK}
						</li>
						<li>
							<strong class="font-semibold text-white">Phone:</strong> {CONTACT_PHONE_UK}
						</li>
					</ul>
					<div class="mt-6 flex flex-wrap gap-3">
						<a
							href={`mailto:${CONTACT_EMAIL_UK}`}
							class="rounded-2xl border border-white/20 px-5 py-2 text-sm font-medium text-white transition hover:border-gtvorange hover:text-gtvorange"
						>
							Email team
						</a>
						<a
							href={WHATSAPP_LINK_UK}
							class="group flex h-12 w-12 items-center justify-center rounded-2xl bg-gradient-to-br from-emerald-400 via-emerald-500 to-emerald-600 text-white shadow-lg shadow-emerald-500/30 transition hover:-translate-y-0.5"
							target="_blank"
							rel="noreferrer"
							aria-label="WhatsApp directo UK"
						>
							<svg viewBox="0 0 32 32" class="h-5 w-5" fill="currentColor" aria-hidden="true">
								<path
									d="M16 1.7c-7.8 0-14.2 6.3-14.2 14.1 0 2.5.7 4.9 1.9 7L2 30.6l8.1-2.1c2 1.1 4.3 1.7 6.7 1.7 7.8 0 14.2-6.4 14.2-14.2 0-3.8-1.5-7.3-4.1-10A13.92 13.92 0 0 0 16 1.7zm7.9 20c-.3.9-2 1.9-2.8 2-.7.1-1.6.1-2.6-.2-.6-.2-1.3-.4-2.3-.9-4.1-1.8-6.8-5.9-7-6.2-.2-.3-1.7-2.2-1.7-4.2 0-2 .6-3.1.9-3.5.4-.4.8-.5 1.1-.5H11c.3 0 .6 0 .8.7.3.8 1.2 2.8 1.3 3 .1.2.2.4 0 .7l-.4.7c-.2.2-.4.5-.6.7-.2.2-.4.4-.2.8s1.1 1.9 2.3 2.9c1.6 1.4 2.9 1.9 3.3 2.1.4.2.6.2.9-.1.3-.3 1-1.2 1.3-1.6.3-.4.5-.3.9-.2.4.1 2.3 1.1 2.7 1.3.4.2.7.3.8.4.1.2.1 1-.3 1.9z"
								/>
							</svg>
							<span class="sr-only">WhatsApp UK</span>
						</a>
					</div>
				</article>
			</div>
		</section>

		<footer class="rounded-3xl border border-white/10 bg-white/5 px-8 py-6 text-center text-xs text-white/60 backdrop-blur">
			<p>© {currentYear} GTVMOTOR</p>
			<div class="mt-2 flex items-center justify-center gap-4 text-sm">
				<a href="https://gtvmotor.es" class="transition hover:text-white">gtvmotor.es</a>
				<span aria-hidden="true">·</span>
				<a href="https://gtvmotor.co.uk" class="transition hover:text-white">gtvmotor.co.uk</a>
			</div>
		</footer>
	</div>
</BaseLayout>
